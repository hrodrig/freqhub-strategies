set -euo pipefail

usage() {
  cat <<'EOF'
Usage: net up|down

Environment variables:
  NETWORK_NAME  Docker network name (default: freqtrade-network)
EOF
}

if [[ "${1:-}" == "-h" || "${1:-}" == "--help" ]]; then
  usage
  exit 0
fi

ACTION="${1:-}"
NETWORK_NAME="${NETWORK_NAME:-freqtrade-network}"

case "${ACTION}" in
  up)
    if docker network inspect "${NETWORK_NAME}" >/dev/null 2>&1; then
      echo "Network ${NETWORK_NAME} already exists."
      exit 0
    fi
    docker network create "${NETWORK_NAME}"
    echo "Network ${NETWORK_NAME} created."
    ;;
  down)
    if ! docker network inspect "${NETWORK_NAME}" >/dev/null 2>&1; then
      echo "Network ${NETWORK_NAME} does not exist."
      exit 0
    fi
    docker network rm "${NETWORK_NAME}"
    echo "Network ${NETWORK_NAME} removed."
    ;;
  *)
    echo "ERROR: missing or invalid action. Use 'up' or 'down'." >&2
    usage >&2
    exit 1
    ;;
esac
#!/usr/bin/env bash

set -euo pipefail

usage() {
  cat <<'EOF'
Usage: net <up|down>

Environment variables:
  NETWORK_NAME   Docker network name (default: freqtrade-network)
EOF
}

ACTION="${1:-}"
if [[ -z "${ACTION}" || "${ACTION}" == "-h" || "${ACTION}" == "--help" ]]; then
  usage
  exit 0
fi

NETWORK_NAME="${NETWORK_NAME:-freqtrade-network}"

case "${ACTION}" in
  up)
    if docker network inspect "${NETWORK_NAME}" >/dev/null 2>&1; then
      echo "Network ${NETWORK_NAME} already exists."
      exit 0
    fi
    docker network create "${NETWORK_NAME}"
    echo "Network ${NETWORK_NAME} created."
    ;;
  down)
    if ! docker network inspect "${NETWORK_NAME}" >/dev/null 2>&1; then
      echo "Network ${NETWORK_NAME} does not exist."
      exit 0
    fi
    docker network rm "${NETWORK_NAME}"
    echo "Network ${NETWORK_NAME} removed."
    ;;
  *)
    echo "ERROR: unknown action '${ACTION}'" >&2
    usage >&2
    exit 1
    ;;
esac
